<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <TextView
        android:id="@+id/lengthText"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="150dp"
        android:elegantTextHeight="true"
        android:fontFamily="@font/asset"
        android:onClick="openMainActivity"
        android:text="Length"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/massText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="236dp"
        android:fontFamily="@font/asset"
        android:text="Mass"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/lengthText"
        app:layout_constraintTop_toBottomOf="@+id/lengthText" />

    <Button
        android:id="@+id/lengthButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Length"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/lengthText"
        app:layout_constraintStart_toEndOf="@+id/lengthText" />

    <Button
        android:id="@+id/massButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="236dp"
        android:text="Mass"
        app:layout_constraintBottom_toBottomOf="@+id/massText"
        app:layout_constraintStart_toEndOf="@+id/massText"
        app:layout_constraintTop_toBottomOf="@+id/lengthButton" />

</androidx.constraintlayout.widget.ConstraintLayout>